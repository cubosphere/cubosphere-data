logoactive=0;
darkbg=-1;



function Precache()
 FONT_Load(TRANS_Str("font"));
 Entries={""};
 Hints={""};
 darkbg=TEXDEF_Load("darkbg");
 Selected=0;

 local slot=GLOBAL_GetVar("SaveToSlot");
 INCLUDE("/include/savegame.inc");
